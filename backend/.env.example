# Azure Image Categorizer - Environment Configuration

# Azure Storage Configuration
AZURE_STORAGE_CONNECTION_STRING=your_azure_storage_connection_string_here
AZURE_CONTAINER_NAME=images

# Azure Computer Vision Configuration
AZURE_COMPUTER_VISION_ENDPOINT=https://your-resource-name.cognitiveservices.azure.com/
AZURE_COMPUTER_VISION_KEY=your_computer_vision_subscription_key_here

# API Configuration  
API_HOST=0.0.0.0
API_PORT=8000

# Processing Configuration
MAX_UPLOAD_SIZE_MB=10
SUPPORTED_IMAGE_FORMATS=jpg,jpeg,png,bmp,gif

# Local Development (set to true to use local mock_data instead of Azure)
USE_LOCAL_STORAGE=false